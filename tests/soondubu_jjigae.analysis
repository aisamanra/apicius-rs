analysis {
  $chili
     <- dice <- cook 5m <- [1/2] yellow onion
     <- [2 tbsp] chili paste
  $zucchini
     <- cook 1m <- $chili
     <- dice <- [1] zucchini
  $kimchi
     <- stir <- $zucchini
     <- chop coarsely <- [1 cup] kimchi
  $broth
     <- simmer 2m <- $kimchi
     <- [2 cups] beef or chicken broth + [1 tsp] soy sauce
  $tofu
     <- boil <- $broth
     <- [16oz] silken tofu
  $eggs
     <- cover with broth, simmer <- $tofu
     <- [3] eggs
}
