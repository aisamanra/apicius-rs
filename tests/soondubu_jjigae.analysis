None: [
    [
        Join(
            "$eggs",
        ),
        cook 2m,
    ],
]
$chili: [
    [
        Ingredients(
            [
                [1/2]yellow onion,
            ],
        ),
        dice,
        cook 5m,
    ],
    [
        Ingredients(
            [
                [2 tbsp]chili paste,
            ],
        ),
    ],
]
$zucchini: [
    [
        Join(
            "$chili",
        ),
        cook 1m,
    ],
    [
        Ingredients(
            [
                [1]zucchini,
            ],
        ),
        dice,
    ],
]
$kimchi: [
    [
        Join(
            "$zucchini",
        ),
        stir & [salt],
    ],
    [
        Ingredients(
            [
                [1 cup]kimchi,
            ],
        ),
        chop coarsely,
    ],
]
$broth: [
    [
        Join(
            "$kimchi",
        ),
        simmer 2m,
    ],
    [
        Ingredients(
            [
                [2 cups]beef or chicken broth,
                [1 tsp]soy sauce,
            ],
        ),
    ],
]
$tofu: [
    [
        Join(
            "$broth",
        ),
        boil & [salt],
    ],
    [
        Ingredients(
            [
                [16oz]silken tofu,
            ],
        ),
    ],
]
$eggs: [
    [
        Join(
            "$tofu",
        ),
        cover with broth, simmer,
    ],
    [
        Ingredients(
            [
                [3]eggs,
            ],
        ),
    ],
]
